<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_MMS" />
    <uses-permission android:name="android.provider.Telephony.SMS_RECEIVED" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <uses-feature android:name="android.hardware.telephony" />

    <application
        android:name=".data.MyApp"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".ui.Activity.RecycleConversationactivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.BakupRestoreActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.SwipeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.AboutActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.ThemeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.IntroActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.LanguageActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.ScheduleActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.AddScheduleActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.GroupProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".ui.Activity.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.ArchivedActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.RecycleBinActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.NewConversationActivtiy"
            android:exported="false" />
        <activity
            android:name=".ui.Activity.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/splashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="smsto" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.Activity.SmsPermissionActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplication" />

        <receiver
            android:name=".data.reciever.SmsReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
                <action android:name="android.provider.Telephony.SMS_DELIVER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".ui.send.MmsReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BROADCAST_WAP_PUSH">
            <intent-filter>
                <action android:name="android.provider.Telephony.WAP_PUSH_DELIVER" />

                <data android:mimeType="application/vnd.wap.mms-message" />
            </intent-filter>
        </receiver>

        <service
            android:name=".data.reciever.HeadlessSmsSendService"
            android:exported="true"
            android:permission="android.permission.SEND_RESPOND_VIA_MESSAGE">
            <intent-filter>
                <action android:name="android.intent.action.RESPOND_VIA_MESSAGE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="sms" />
                <data android:scheme="smsto" />
                <data android:scheme="mms" />
                <data android:scheme="mmsto" />
            </intent-filter>
        </service>
        <!--
 <service
            android:name=".ui.reciever.MmsService"
            android:exported="true"
            android:permission="android.permission.BROADCAST_WAP_PUSH">
            <intent-filter>
                <action android:name="android.provider.Telephony.WAP_PUSH_RECEIVED" />

                <data android:mimeType="application/vnd.wap.mms-message" />
            </intent-filter>
        </service>
        -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.smsprovider"
            android:exported="false"
            android:grantUriPermissions="true" />

        <activity
            android:name=".ui.Activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".ui.Activity.ConversationActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".ui.Activity.ContactActivtiy" />
        <activity android:name=".ui.Activity.BlockedContactActivity" />
        <activity android:name=".ui.Activity.BlockMessageActivity" />
        <activity android:name=".ui.Activity.StarredMessagesActivity" />
        <activity android:name=".ui.Activity.EditCategoryActivity" />

        <receiver android:name=".ui.send.SmsStatusSentReceiver" />
        <receiver
            android:name=".data.reciever.NotificationReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".data.reciever.MessageSenderReceiver"
            android:exported="false" />
    </application>

</manifest>