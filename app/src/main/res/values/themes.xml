<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar"></style>


    <style name="splashTheme" parent="Theme.MyApplication">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CustomDatePicker" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">#1A73E8</item>
        <item name="colorAccent">#1A73E8</item>
        <item name="android:colorAccent">#1A73E8</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButton</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButton</item>
    </style>

    <style name="CustomTimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorAccent">#2276FF</item>
        <item name="android:colorAccent">#2276FF</item>
        <item name="android:headerBackground">#2276FF</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">#2276FF</item>
        <item name="android:numbersSelectorColor">#2276FF</item>
        <item name="android:numbersTextColor">@color/white</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButton</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButton</item>
    </style>

    <style name="DialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#2276FF</item>
    </style>



    <style name="CustomDatePickerWidget" parent="Theme.MyApplication">
        <item name="android:headerBackground">#1A73E8</item>
        <item name="android:calendarTextColor">#1A73E8</item>
        <item name="android:windowBackground">@color/send_bg_color</item>
    </style>

    <style name="CustomTimePickerDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">#1A73E8</item>
        <item name="colorAccent">#1A73E8</item>
        <item name="colorOnPrimary">#1A73E8</item>
    </style>


    <style name="BottomDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>


</resources>