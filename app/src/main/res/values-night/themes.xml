<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:splitMotionEvents">false</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">#1A73E8</item>
        <item name="colorOnPrimary">#1A73E8</item>
        <item name="colorAccent">#1A73E8</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/send_bg_color</item>
        <item name="android:datePickerDialogTheme">@style/CustomDatePicker</item>
    </style>

    <style name="CustomDatePicker" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">#1A73E8</item>
        <item name="colorAccent">#1A73E8</item>
        <item name="android:windowBackground">@color/send_bg_color</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerWidget</item>
    </style>


    <style name="CustomTimePickerDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">#1A73E8</item>
        <item name="colorAccent">#1A73E8</item>
        <item name="colorOnPrimary">#1A73E8</item>
        <item name="android:windowBackground">@color/send_bg_color</item>
    </style>
</resources>