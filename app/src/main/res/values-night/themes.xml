<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="DialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#2276FF</item>
    </style>

    <style name="CustomDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorAccent">#2276FF</item>
        <item name="android:colorAccent">#2276FF</item>
        <item name="android:headerBackground">#2276FF</item>
        <item name="android:windowBackground">@color/select_bg</item>
        <item name="android:textColorPrimary">@color/textcolor</item>
        <item name="android:textColorSecondary">#2276FF</item>

        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButton</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButton</item>
    </style>

    <style name="CustomTimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorAccent">#2276FF</item>
        <item name="android:colorAccent">#2276FF</item>
        <item name="android:headerBackground">#2276FF</item>
        <item name="android:windowBackground">@color/select_bg</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">#2276FF</item>
        <item name="android:numbersSelectorColor">#2276FF</item>
        <item name="android:numbersTextColor">@color/black</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButton</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButton</item>
    </style>


    <style name="CustomTimePickerDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">#1A73E8</item>
        <item name="colorAccent">#1A73E8</item>
        <item name="colorOnPrimary">#1A73E8</item>
        <item name="android:windowBackground">@color/send_bg_color</item>
    </style>









    <style name="BaseTheme.TimePicker" parent="@style/ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="backgroundColor">@color/popup_bg</item>
        <item name="chipStyle">@style/BaseTheme.TimePicker.ChipStyle</item>
        <item name="materialButtonOutlinedStyle">@style/BaseTheme.TimePicker.AmPmButton</item>
        <item name="borderlessButtonStyle">@style/BaseTheme.TimePicker.Button</item>
    </style>
    <style name="BaseTheme.TimePicker.ChipStyle" parent="Widget.Material3.MaterialTimePicker.Display">
        <item name="chipBackgroundColor">@color/time_picker_chip_bg</item>
    </style>
    <style name="BaseTheme.TimePicker.AmPmButton" parent="Widget.MaterialComponents.TimePicker.Button">
        <item name="background">@color/time_picker_chip_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/light_grey</item>
    </style>
    <style name="BaseTheme.TimePicker.Button" parent="Widget.MaterialComponents.TimePicker.Button">
        <item name="android:textColor">@color/text_black</item>
        <item name="strokeWidth">0dp</item>
    </style>
</resources>