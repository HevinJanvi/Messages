<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".ui.Activity.NotificationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="7dp"
            android:adjustViewBounds="true"
            android:padding="6dp"
            android:background="@drawable/ripple_effect_round"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/product_sans_medium"
            android:text="@string/notifications"
            android:textColor="@color/textcolor"
            android:textFontWeight="500"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icBack"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/ripple_effect"
        app:layout_constraintTop_toBottomOf="@id/actionbar">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_regular"
            android:paddingStart="40dp"
            android:text="@string/notifications"
            android:textColor="@color/textcolor"
            android:textFontWeight="400"
            android:textSize="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_regular"
            android:paddingStart="40dp"
            android:text="@string/tap_to_customize"
            android:textColor="@color/gray_txtcolor"
            android:textFontWeight="400"
            android:textSize="14dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/view_color"
        app:layout_constraintTop_toBottomOf="@+id/ly1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ripple_effect"
        app:layout_constraintTop_toBottomOf="@id/ly1">

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_regular"
            android:paddingStart="40dp"
            android:text="@string/notification_previews"
            android:textColor="@color/textcolor"
            android:textFontWeight="400"
            android:textSize="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/selectedOpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_regular"
            android:paddingStart="40dp"
            android:text="@string/show_name_and_message"
            android:textColor="@color/gray_txtcolor"
            android:textFontWeight="400"
            android:textSize="14dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/view_color"
        app:layout_constraintTop_toBottomOf="@+id/ly2"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ripple_effect"
        app:layout_constraintTop_toBottomOf="@id/ly2">

        <TextView
            android:id="@+id/txt3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_regular"
            android:paddingStart="40dp"
            android:text="@string/wake_screen"
            android:textColor="@color/textcolor"
            android:textFontWeight="400"
            android:textSize="17dp"
            app:layout_constraintEnd_toStartOf="@+id/switch_wakeNoti"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_regular"
            android:paddingStart="40dp"
            android:text="@string/wake_screen_when_notification_arrives"
            android:textColor="@color/gray_txtcolor"
            android:textFontWeight="400"
            android:textSize="14dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/switch_wakeNoti"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt3" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_wakeNoti"
            style="@style/Widget.Material3.CompoundButton.MaterialSwitch"
            android:layout_width="55dp"
            android:layout_height="30dp"
            app:trackDecorationTint="@android:color/transparent"
            app:thumbIcon="@drawable/custom_thumb"
            app:thumbIconTint="@color/transparant"
            app:trackTint="@drawable/custom_track"
            android:scaleX=".655"
            android:scaleY=".65"
            android:checked="true"
            app:thumbTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>